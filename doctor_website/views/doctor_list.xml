<odoo>
    <template id="view_doctor_list">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <div class="row">
                    <div class="col-md-6 d-inline-flex">
                        <a href="/my/home" class="btn btn-primary">
                            <i class="fa fa-arrow-left"></i>
                        </a>
                        <a class="btn">
                            <t t-esc="name"/>
                        </a>
                    </div>
                    <div class="col-md-6 col-12 mt-3 mt-md-0">
                        <form t-att-action="'/my/dashboard/%s' %department_id" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="input-group">
                                <input name="search" type="text" class="form-control" placeholder="Search..."
                                       t-att-value="search if search else ''"/>
                                <div class="input-group-append">
                                    <button type="submit"
                                            t-attf-class="btn btn-primary {{ 'active' if department_id == 0 else '' }}"
                                            aria-label="Search"
                                            title="Search">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
               <div class="row mt-3">
    <div class="col-lg-12 col-md-12">
        <div class="overflow-auto" style="max-height: 70vh; white-space: nowrap;">
            <t t-if="doctors">
                <div class="d-flex flex-nowrap">
                    <t t-foreach="doctors" t-as="doc">
                        <div class="col-md-4" style="display: inline-block; margin-right: 20px;">
                            <div class="circle-icon">
                                <i class="fas fa-user"></i>
                                <p class="department-name"><t t-esc="doc.name"/></p>
                            </div>
                            <button class="btn-whimsical">Book Me</button><br/>
                        </div>
                    </t>
                </div>
            </t>
            <t t-if="not doctors">
                <p>No doctors found.</p>
            </t>
        </div>
    </div>
</div>

            </div>
        </t>
    </template>
</odoo>
