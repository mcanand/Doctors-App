<odoo>

    <template id="view_slot_details">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <div class="row">
                       <div class="col-md-6 d-inline-flex">
                    <a href="/my/home" class="btn btn-primary">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    <a class="btn">
                        <t t-esc="name"/>
                    </a>
                </div>
                    <div class="col-md-12">
                             <table class="table table-striped mt-5">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time Interval</th>
                                     <th>Booking</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="slots" t-as="slot">
                                    <tr>
                                        <td><t t-esc="slot.date"/></td>
                                        <td><t t-esc="slot.display_time_interval"/></td>
                                        <td>
                                             <a t-attf-class="btn btn-primary mt-3 w-100"
                                                t-att-href="'/slot/list/%s' %doctor.id">
                                                 Book Now
                                             </a>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>