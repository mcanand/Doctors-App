<odoo>
    <data>
        <template id="appoinments">
            <t t-call="portal.frontend_layout">
                <div class="container pt-5 pb-5">
                    <style>
                        <!-- Styles omitted for brevity -->
                    </style>
                    <h4 style="color:#30abd5">Appoinments</h4>
                    <div class="row ">
                        <!-- Header section omitted for brevity -->

                        <div class="col-md-12">
                            <table class="table table-striped mt-5">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Doctor</th>
                                        <th>Time Interval</th>
                                        <th>Meeting Link</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="appointments" t-as="appointment">
                                        <tr>
                                            <td>
                                                <t t-esc="appointment.get('date')"/>
                                            </td>
                                            <td>
                                                <t t-esc="appointment.get('doctor_name')"/>
                                            </td>
                                            <td>
                                                <t t-esc="appointment.get('appoinment_time')"/>
                                            </td>
                                            <td style="color:#30abd5"><t t-esc="appointment.get('meeting_link')"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
