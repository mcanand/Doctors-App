<odoo>
    <template id="portal_my_dashboard">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <style>
                    <!-- css for search -->
                    .input-box {
                    position: relative;
                    height: 36px;
                    max-width: 600px;
                    width: 90%;
                    margin: 0 auto;
                    border-radius: 18px;
                    overflow: hidden;
                    border: 2px solid #30abd5;

                    }

                    .input-box input {
                    height: 100%;
                    width: calc(100% - 40px);
                    padding-left: 60px;
                    border: none;
                    border-radius: 18px;
                    outline: none;
                    }

                    .input-box .search-icon {
                    position: absolute;
                    top: 50%;
                    left: 6px;
                    transform: translateY(-50%);
                    color: #30abd5;
                    }

                    .input-box .search-icon i {
                    font-size: 14px;
                    }

                    /* Media query for mobile devices */
                    @media only screen and (max-width: 480px) {
                    .input-box {
                    width: 140%;
                    }
                    }


                    <!-- css for department -->
                    .circle-icon-wrapper {
                    margin-bottom: 10px;
                    text-align: center;
                    }

                    .circle-icon {
                    width: 80px;
                    height: 80px;
                    border-radius: 50%;
                    background-color: lightblue;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    overflow: hidden;
                    }

                    .circle-icon i {
                    font-size: 40px;
                    color: #333;
                    }

                    .department-name {
                    margin-top: 10px;
                    text-align: center;
                    }

                    <!-- css button for booking button -->
                    .btn-whimsical {
                    display: inline-block;
                    padding: 10px 20px;
                    font-size: 13px;
                    border: none;
                    border-radius: 80px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 100px;
                    }

                    .btn-whimsical:hover {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }

                    .circle-icon-doctor {
                    width: 120px;
                    height: 120px;
                    border-radius: 50%;
                    background-color: lightblue;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    overflow: hidden;
                    }

                    .circle-icon-doctor i {
                    font-size: 60px;
                    color: #333;
                    }
                    .dept-name {
                    margin-top: 10px;

                    }

                     .btn-whimsical-doctor {
                    display: inline-block;
                    padding: 10px 20px;
                    font-size: 13px;
                    border: none;
                    border-radius: 80px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 350px;
                    justify-content: center;
                    text-align: center;
                    }

                    .btn-whimsical-doctor:hover {
                    transform: rotate(-4deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical-doctor:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }

                </style>

                <div class="row">
                    <div class="col-md-6 d-flex align-items-center">
                        <form t-att-action="'/my/dashboard/%s' %department_id" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="input-box" >
                                <span class="search-icon">
                                    <i class="fa fa-search"></i>
                                </span>
                                <input type="text" placeholder="Search Doctor Here..."/>
                            </div>


                        </form>
                    </div>


                    <div class="col-md-6 d-md-none">
                        <div class="text">
                            <span class="h4"><br/>Find,
                                <br/>
                                the Perfect Doctor
                                <br/>
                                for Your Needs...
                            </span>
                            <br/>
                            <br></br>

                        </div>
                    </div>
                </div>
                <h6 class="mb-0">Departments</h6>
                <div class="row mt-3">
                    <div class="col-lg-12 col-md-12 text-align: center;">
                        <div class="overflow-auto" style="max-height: 70vh; white-space: nowrap; ">
                            <t t-if="departments">

                                <div class="d-flex flex-nowrap">
                                    <t t-foreach="departments" t-as="dep">
                                        <div class="col-md-4" style="display: inline-block; margin-right: 8px;">
                                            <div class="circle-icon-wrapper">
                                                <a t-att-href="'/department/doctor/%s' %dep.id">
                                                <div class="circle-icon">
                                                      <img class="img-fluid" t-if="dep.image"
                                                     t-att-src="'data:image/png;base64,' + dep.image.decode()"
                                                     alt="Doctor Image"/>
                                                <i t-if="not dep.image" class="fa fa-department"></i>
                                                </div>
                                                </a>
                                            </div>
                                            <p class="department-name text-wrap text-center">
                                                <t t-esc="dep.name"/>
                                            </p>
                                        </div>
                                    </t>
                                </div>
                            </t>
                            <t t-if="not online_doctors">
                                <p>No departments found.</p>
                            </t>
                        </div>
                    </div>
                </div>
                 <h6 class="mb-0">Live Consultation</h6>
                <div class="row mt-3">
                    <div class="col-lg-12 col-md-12">
                        <div class="overflow-auto" style="max-height: 70vh; white-space: nowrap;">
                            <t t-if="online_doctors">

                                <div class="d-flex flex-nowrap">
                                    <t t-foreach="online_doctors" t-as="doc">
                                        <div class="col-md-4" style="display: inline-block; margin-right:8px">
                                            <div class="circle-icon-doctor image-fluid">
                                                <img class="img-fluid" t-if="doc.image_1920"
                                                     t-att-src="'data:image/png;base64,' + doc.image_1920.decode()"
                                                     alt="Doctor Image"/>
                                                <i t-if="not doc.image_1920" class="fa fa-user"></i>
                                            </div>
                                            <p class="doc.department_id text-center" style="padding-top: 10px;  margin-bottom: 20px;">
                                                <t t-esc="doc.name"/>
                                                <br/>
                                                <t t-esc="doc.department_id.name"/>
                                                <br/>
                                                 <a t-attf-class="btn-whimsical"
                                                           t-att-href="'/doctor/details/%s' %doc.id">Book Now
                                                        </a>
                                            </p>
                                        </div>
                                    </t>
                                </div>
                            </t>
                            <t t-if="not online_doctors">
                                <p>No doctors found.</p>
                            </t>
                        </div>
                    </div>
                </div>


                <br/>
                 <a role="button" href="/all/doctor" class="btn-whimsical-doctor">
                     All Doctors
                                </a>
            </div>
        </t>
    </template>
</odoo>
