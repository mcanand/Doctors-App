<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_layout_inherit" inherit_id="portal.portal_layout">
        <xpath expr="//div[hasclass('o_portal')]" position="replace"/>
        <xpath expr="//div[@id='wrap']" position="replace">
            <div class="container pt-5 pb-5">
                <style>
                    main {
                        background-color: white;
                    }
                    .oe_avatar {
                        width: 100px;
                        height: 100px;
                    }
                    /* CSS for booking button */
                    .btn-whimsical {
                        display: inline-block;
                        padding: 5px 10px;
                        font-size: 13px;
                        border: none;
                        border-radius: 200px;
                        background-color: #30abd5;
                        color: #ffffff;
                        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                        transition: transform 0.3s, box-shadow 0.3s;
                        width: 330px;
                    }
                    .btn-whimsical:hover {
                        transform: rotate(-5deg) scale(1.1);
                        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }
                    .btn-whimsical:active {
                        transform: rotate(0) scale(1);
                        box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }
                </style>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <a role="button" href="/department/list" class="btn-whimsical  text-center">
                                    <i class="fa fa-building "/>
                                    Departments
                                </a>
                            </div>
                            <div class="col-md-12 mb-3">
                                <a role="button" href="" class="btn-whimsical  text-center">
                                    <i class="fa fa-pencil"/>
                                    Edit Details
                                </a>
                            </div>
                                <div class="col-md-12 mb-3">
                                <a role="button" href="/added/prescription/list" class="btn-whimsical  text-center">
                                    <i class="fa fa-hospital-o"></i>

                                    Added Prescriptions
                                </a>
                            </div>
                            <div class="col-md-12 mb-3">
                                <a role="button" href="/appointments" class="btn-whimsical  text-center">
                                     <i class="fa fa-calendar"></i>
                                    Appoinments
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <t t-out="0"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <template id="portal_my_details_inherit" inherit_id="portal.portal_my_details">
        <xpath expr="//div[hasclass('o_portal_details')]" position="replace">
            <style>
                .uploaded-image {
                    width: 120px;
                    height: 120px;
                }
                .image-upload-label {
                    width: 120px;
                    height: 120px;
                }
            </style>
            <div class="row image_select">
                <div class="col-12">
                    <label for="image_1920" class="image-upload-label">
                        <img class="uploaded-image image_1920"
                             src="/web/image/profile.contact.details/#{object.id}/image" alt="Uploaded Image"/>
                        <input type="file" id="image_1920" name="image_1920" t-ref="fileInput"
                               style="display:none"/>
                    </label>
                </div>
                <div class="col-12">
                    <t t-call="portal.portal_my_details_fields"/>
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                </div>
            </div>
            <div class="clearfix">
                <button type="submit" class="btn btn-primary w-100 mb-3">
                    Confirm
                    <span class="fa fa-long-arrow-right"/>
                </button>
            </div>
        </xpath>
    </template>
</odoo>
