<odoo>
    <template id="edit_doctor_details">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <form action="/doctor/save" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="doctor-details">
                        <div class="field">
                            <label>Name:</label>
                            <input type="text"  name="name" t-att-value="doctor.name"/>
                        </div>
                        <div class="field">
                            <label>Department:</label>
                            <select class="o_input o_field_widget" name="department_id">
                                <option t-foreach="departments" t-as="department" t-att-value="department.id">
                                    <t t-esc="department.name"/>
                                </option>
                            </select>
                        </div>

<!--                        <div class="field">-->
<!--                            <label>Work Address:</label>-->
<!--                            <input type="text" name="address_id" t-att-value="doctor.address_id.name" />-->
<!--                        </div>-->
<!--                        <div class="field">-->
<!--                            <label>Work Location:</label>-->
<!--                            <input type="text" name="work_location_id" t-att-value="doctor.work_location_id.name"/>-->
<!--                        </div>-->
                        <div class="field">
                            <label>Work Experience(In Years):</label>
                            <input type="number" name="work_experience" t-att-value="doctor.work_experience"/>
                        </div>
                         <div class="field">
                            <label>Date:</label>
                             <input type="date" name="date" t-att-value="doctor.date" />
                        </div>
                        <div class="field">
                            <label>From:</label>
                             <input type="time" name="from" t-att-value="doctor.time_from"/>
                        </div>
                        <div class="field">
                            <label>To:</label>
                             <input type="time" name="to"  t-att-value="doctor.time_to"/>
                        </div>
                        <div class="field">
                            <label>About:</label>
                            <textarea name="about" t-esc="doctor.about"/>
                        </div>
                       <div class="center-container">
                            <button class="btn-whimsical" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </t>
        <t t-extend="portal.assets">
            <t t-append="head">
                <style>
                    .center-container {
                    display: flex;
                    justify-content: center;
                    align-items: center;

                    }
                    /* CSS for booking button */
                    .btn-whimsical {
                    display: inline-block;
                    padding: 10px 20px;
                    font-size: 13px;
                    border: none;
                    border-radius: 80px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 100px;
                    }

                    .btn-whimsical:hover {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }
                    .doctor-details {
                    margin: 0 auto;
                    max-width: 300px;
                    }
                    .field {
                    margin-bottom: 20px;
                    color:#30abd5;
                    }
                    .field label {
                    display: block;
                    font-weight: bold;
                    font-family: cursive;
                    }
                    .field input,
                    .field textarea {
                    width: 100%;
                    padding: 5px;
                    border: 1px solid #30abd5;

                    }
                    .center-container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    }

                    /* Other styles... */

                    .field select {
                    width: 100%;
                    padding: 5px;
                    border: 1px solid #30abd5;
                    box-sizing: border-box;
                    }
                </style>
            </t>
        </t>
    </template>
</odoo>
