<odoo>
    <template id="all_booking_details">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <style>
                    .btn-custom-color {
                    background-color:#30abd5 ; /* Replace with your desired color */
                    color: #FFFFFF; /* Replace with your desired text color */
                    /* Add any additional styles as needed */
                    }

                    /* CSS for booking button */
                    .btn-whimsical {
                    display: inline-block;
                    padding: 10px 20px;
                    font-size: 13px;
                    border: none;
                    border-radius: 80px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 100px;
                    }

                    .btn-whimsical:hover {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }
                </style>
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="mb-0">Upcoming Booking Details</h6>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Patient</th>

                                    <th>Time Slot</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            <t t-set="page_size" t-value="5" />
                                <t t-set="current_page" t-value="1" />
                                <t t-set="start_index" t-value="(current_page - 1) * page_size" />
                                <t t-set="end_index" t-value="current_page * page_size" />
                                <t t-set="bookings_slice" t-value="bookings[start_index:end_index]" />
                                <t t-foreach="bookings_slice" t-as="booking">
                                    <tr>
                                        <td>
                                            <t t-esc="booking.get('date')"/>
                                        </td>
                                        <td>
                                            <t t-esc="booking.get('patient_name')"/>
                                        </td>
                                        <td>
                                            <t t-esc="booking.get('appoinment_time')"/>
                                        </td>
                                        <td>
                                            <a t-attf-class="btn-whimsical">Booked</a>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="not bookings_slice">
                                    <tr>
                                        <td colspan="4">No upcoming bookings found.</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
              <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="oe_pager select_details">
                           <div class="btn-group" role="group">
                            <a t-att-disabled="current_page == 1" t-att-href="'/all/booking?page=' + str(current_page - 1)">Previous</a>
                            <a t-att-disabled="end_index >= len(bookings)" t-att-href="'/all/booking?page=' + str(current_page + 1)">Next</a>
                        </div>
                        <span class="oe_pager_summary">
                            Page <t t-esc="current_page"/> of <t t-esc="(len(bookings) // page_size) + 1"/>
                        </span>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
