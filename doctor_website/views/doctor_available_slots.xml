<odoo>

    <template id="view_doctor_available_slots_mobile">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <script type="text/javascript" src="/web/static/lib/jquery/jquery.js"></script>

                <style>
                    .btn-whimsical {
                    display: inline-block;
                    padding: 8px 20px;
                    font-size: 13px;
                    border: none;
                    border-radius: 50px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 100px;
                    }

                    .btn-whimsical:hover {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }
                </style>

                <div class="row">
                    <div class="col-md-6 d-inline-flex">
                        <a href="/my/home" class="btn btn-primary" style="background-color: #30abd5;">
                            <i class="fa fa-arrow-left"></i>
                        </a>
                        <a class="btn">
                            <t t-esc="name"/>
                        </a>
                    </div>
                    <div class="col-md-12">
                        <table class="table table-striped mt-5">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time Interval</th>
                                    <th>Booking</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="slots" t-as="slot">
                                    <tr>
                                        <td>
                                            <t t-esc="slot.date"/>
                                        </td>
                                        <td>
                                            <t t-esc="slot.display_time_interval"/>
                                        </td>
                                        <td>


                                            <a t-attf-class="btn-whimsical"
                                               t-att-style="'width: 110px; background-color: #30abd5;'"
                                               t-att-href="'/doctor/book/slot/%s' %slot.id">
                                                Book Now
                                            </a>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </t>
    </template>


</odoo>