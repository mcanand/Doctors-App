<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="website_my_homepage_inherit" inherit_id="website.homepage">
        <xpath expr="//div" position="after">
            <div class="container pt-5 pb-5">
                <div class="row select_details d-md-none">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="category_selection">Select Category:</label>
                            <select class="form-control" id="category_selection" name="user_doctor_selection"  style="background-color:aliceblue">
                                <option value="user">User</option>
                                <option value="doctor">Doctor</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!-- Table to display booked slots -->
              <div class="row booked_slots_table" style="display: none;">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time Slot</th>
                </tr>
            </thead>
            <tbody>
                <!-- Use Odoo's templating language to loop through the slots data -->
                <t t-foreach="slots" t-as="slot">
                    <tr>
                        <td><t t-esc="slot.date" /></td>
                        <td><t t-esc="slot.time_slot" /></td>
                    </tr>
                </t>
            </tbody>
        </table>
    </div>
</div>

            </div>
        </xpath>
    </template>
</odoo>
