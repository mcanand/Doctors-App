<odoo>
<template id="portal_my_dashboard">
    <t t-call="portal.frontend_layout">
        <div class="container pt-5 pb-5">
            <div class="row">
                <div class="col-md-6 d-inline-flex">
                    <a href="/my/home" class="btn btn-primary">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    <a class="btn">
                        <t t-esc="name"/>
                    </a>
                </div>
                <div class="col-md-6 col-12 mt-3 mt-md-0">
                    <form t-att-action="'/my/dashboard/%s' %department_id" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="input-group">
                            <input name="search" type="text" class="form-control" placeholder="Search..."
                                   t-att-value="search if search else ''"/>
                            <div class="input-group-append">
                                <button type="submit"
                                        t-attf-class="btn btn-primary {{ 'active' if department_id == 0 else '' }}"
                                        aria-label="Search"
                                        title="Search">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-12 col-md-12">
                    <div class="overflow-auto" style="max-height: 70vh;">
                        <t t-if="departments">
                            <div class="row">
                                <t t-foreach="departments" t-as="dep">
                                    <div class="col-md-4">
                                        <a t-attf-class="btn btn-primary btn-block mt-2 {{ 'active' if department_id == dep.id else '' }}"
                                           t-att-href="'/department/doctor/%s' %dep.id">
                                            <t t-esc="dep.name"/>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </t>
                        <t t-if="not departments">
                            <p>No departments found.</p>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
</odoo>
