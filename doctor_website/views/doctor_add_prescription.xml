<odoo>
    <template id="doctor_enter_prescription" name="Prescription">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <form action="/prescription/save" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="patient_id" t-att-value="patient.id"/>
                    <style>
                        /* CSS for booking button */
                        .btn-whimsical {
                        display: inline-block;
                        padding: 10px 20px;
                        font-size: 13px;
                        border: none;
                        border-radius: 80px;
                        background-color: #30abd5;
                        color: #ffffff;
                        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                        transition: transform 0.3s, box-shadow 0.3s;
                        width: 200px;
                        margin-top: 10px;
                        text-align:center;
                        }

                        .btn-whimsical:hover {
                        transform: rotate(-5deg) scale(1.1);
                        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                        }

                        .btn-whimsical:active {
                        transform: rotate(0) scale(1);
                        box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                        }


                        .center-container {
                        display: flex;
                        justify-content: center;
                        align-items: center;

                        }
                        .doctor-details {
                        margin: 0 auto;
                        max-width: 300px;
                        }
                        .field {
                        margin-bottom: 20px;
                        color:#30abd5;
                        }
                        .field label {
                        display: block;
                        font-weight: bold;
                        }
                        .field input,
                        .field textarea {
                        width: 100%;
                        padding: 5px;
                        border: 1px solid #30abd5;

                        }
                    </style>
                    <div class="doctor-details">
                        <div class="field">
                            <label>
                                <t t-esc="patient.name"/>
                            </label>
                            <label></label>
                            <label>
                                <t t-esc="patient.date"/>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <section class="content">

                            <div class="card card-info">
                                <div class="card-header">
                                    <h5 class="card-title" style="color:#30abd5">Case Details</h5>

                                    <div class="card-tools">
                                        <!--      <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">-->
                                        <!--        <i class="fas fa-minus"></i>-->
                                        <!--      </button>-->

                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md-12  col-lg-14 order-2 order-md-1">

                                            <div class="row">
                                                <div class="col-12">

                                                    <div class="form-group">
                                                        <textarea class="form-control" rows="6" placeholder="Enter ..."
                                                                  id="case" name="case"></textarea>

                                                    </div>


                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="card card-info">
                                <div class="card-header">
                                    <h5 class="card-title" style="color:#30abd5">Prescription</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md-12  col-lg-14 order-2 order-md-1">

                                            <div class="row">
                                                <div class="col-12">

                                                    <div class="form-group">


                                                        <textarea class="form-control" rows="6" placeholder="Enter ..."
                                                                  id="prescription" name="prescription"></textarea>

                                                    </div>


                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="center-container">
                        <a t-attf-class="btn-whimsical"
                           t-att-href="'/available/booking/slot/%s' %patient.id">
                            Next Available Dates
                        </a>

                    </div>


                    <div class="center-container">
                        <button class="btn-whimsical">Save</button>

                    </div>
                </form>
