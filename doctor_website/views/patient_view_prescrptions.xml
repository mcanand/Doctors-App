<odoo>
    <template id="added_prescription_list" name="Added Prescriptions List">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <style>     .btn-whimsical {
                    display: inline-block;
                    padding: 8px 20px;
                    font-size: 13px;
                    border: none;
                    border-radius: 50px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 100px;
                    }

                    .btn-whimsical:hover {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }
                </style>
                <div class="row">
                    <div class="col-md-12">
                        <h2 style="color:#30abd5"> Prescriptions</h2>
                        <table class="table table-striped mt-5">
                            <thead>
                                <tr>
                                    <th>Doctor</th>
                                    <th>Date</th>
                                    <th>Prescription</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="prescriptions" t-as="prescription">
                                    <tr>
                                        <td><t t-esc="prescription.doctor_id.name"/></td>
                                        <td><t t-esc="prescription.date"/></td>
                                        <td> <a role="button" t-att-href="'/view/prescription/%s' % prescription.id" t-attf-class="btn-whimsical text-center">Prescription
                                        </a>

                                </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
