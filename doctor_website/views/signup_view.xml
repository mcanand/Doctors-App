<odoo>
    <template id="signup_page_template" name="Signup Page">
        <t t-call="web.layout">
            <div class="container">
                <div class="row mt-5">
                    <div class="col-md-12 text-center">
<!--                        <h1 class="page-title">Doctor Signup</h1>-->
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <div class="signup-container">
                            <a t-attf-href="/doctor/enter/details" class="signup-link">
                                <div class="signup-field doctor-field">
                                    <div class="circle">
                                        <img src="/doctor_website/static/src/image/imagedoctor_img.jpeg"
                                             class="field-image"/>
                                    </div>
                                    <h4 class="field-title">I am a doctor</h4>
                                </div>
                            </a>
                            <a t-attf-href="/web/signup?user_type=patient" class="signup-link">
                                <div class="signup-field patient-field">
                                    <div class="circle">
                                        <img src="/doctor_website/static/src/image/images.png" class="field-image"/>
                                    </div>
                                    <h4 class="field-title">I am a patient</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
        <style>
<!--             body {-->
<!--                    background-color: #efefef;-->
<!--                    }-->
            .signup-container {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }

            .signup-field {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 400px;
                height: 400px;
                background-color: #ffffff;
                border: 2px solid #30abd5;
                border-radius: 5px;
                margin: 10px;
                position: relative;
            }

            .doctor-field {
                border-color: #007bff;
            }

            .patient-field {
                border-color: #007bff;
            }

            .circle {
                display: flex;
                justify-content: center;
                align-items: center;
                width: 250px;
                height: 250px;
                border-radius: 50%;
                background-color: #ffffff;
                border: 2px solid #30abd5;
                color: #30abd5;
                font-size: 36px;
                position: absolute;
                top: 50%;
                transform: translateY(-150%);
            }

            .field-image {
                max-width: 80%;
                max-height: 80%;
            }

            .signup-field .field-title {
                font-size: 40px;
                margin-bottom: 0;
                margin-top: 10px;
                color: #007bff;
            }

            .signup-link {
                text-decoration: none;
            }

            .page-title {
                margin-bottom: 20px;
                color: #007bff;
            }
        </style>
    </template>
</odoo>
