        <template id="view_doctor_detail_mobile" name="Doctor Details">
            <t t-call="website.layout">
                <t t-set="sidebar_width" t-value="20"/>
                <style>
                    .container {
                    padding: 20px;
                    }

                    .info-section {
                    margin-bottom: 10px;
                    }

                    .info-section h5 {
                    margin: 0;
                    }

                    .details-container {
                    display: flex;
                    align-items: center;
                    }

                    .details-container .info-section {
                    flex: 1;
                    }

                    .circle-icon-doctor {
                    width: 180px;
                    height: 180px;
                    border-radius: 50%;
                    background-color: lightblue;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    }

                    .circle-icon-doctor img {
                    max-width: 180%;
                    max-height: 180%;
                    border-radius: 50%;
                    }

                    @media (max-width: 767px) {
                    .info-section p {
                    overflow: hidden;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 5; /* Number of lines to display */
                    -webkit-box-orient: vertical;
                    }

                    .rating-button {
                    background-color: #30abd5;
                    color: white;
                    padding: 5px 10px;
                    border: none;
                    border-radius: 4px;
                    }

                    /* CSS for booking button */
                    .btn-whimsical {
                    display: inline-block;
                    padding: 5px 10px;
                    font-size: 13px;
                    border: none;
                    border-radius: 200px;
                    background-color: #30abd5;
                    color: #ffffff;
                    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
                    transition: transform 0.3s, box-shadow 0.3s;
                    width: 150px;

                    }

                    .btn-whimsical:hover {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
                    }

                    .btn-whimsical:active {
                    transform: rotate(0) scale(1);
                    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
                    }

                    .experience-container {
                    display: flex;
                    align-items: flex-start;
                    justify-content: center;
                    flex-direction: column;
                    }

                    .experience-text {
                    font-size: 20px;
                    margin-bottom: 10px;
                    }
                    }
