<odoo>
    <template id="view_doctor_detail">
        <t t-call="portal.frontend_layout">
            <div class="container pt-5 pb-5">
                <div class="row">
                    <div class="col-md-12">
                        <h3>Doctor Details</h3>
                        <p>Name:
                            <t t-esc="doctor.name"/>
                        </p>
                        <p>Specialty:
                            <t t-esc="doctor.department_id.name"/>
                        </p>
                        <div class="col-md-3">
                            <a t-attf-class="btn btn-primary mt-3 w-100"
                                t-att-href="'/slot/list/%s' %doctor.id">
                                Book Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>