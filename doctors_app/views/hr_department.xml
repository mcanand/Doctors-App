<odoo>
    <data>
        <!-- Inheriting the existing view -->
        <record id="view_department_form_inherit" model="ir.ui.view">
            <field name="name">hr.department.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <field name="image" widget="image" options="{'no_create': True}" style="max-width: 100px; max-height: 100px;"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>


