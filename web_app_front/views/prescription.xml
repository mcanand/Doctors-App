<odoo>
    <template id="view_prescription">
        <t t-call="website.layout">
            <!-- Your header content here -->
            <t t-set="app_nav_in_content">
                <a href="javascript: window.history.back()">
                    <i style="font-size:16px;" class="fa fa-angle-left"/>
                </a>
                <span class="poppins300 ml-2" style="color:#333;">
                    Prescriptions
                </span>
            </t>
            <!-- =================================== -->
            <div class="container">
                <div class="row mt-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-14 order-2 order-md-1">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="case">Case Details:</label>
                                            <textarea class="form-control" rows="6" id="case" name="case" readonly="true">
                                                <t t-esc="prescription.case_details"/>
                                            </textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-14 order-2 order-md-1">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="pres">Prescription:</label>
                                            <textarea class="form-control" rows="6" id="pres" name="pres" readonly="true">
                                                <t t-esc="prescription.prescription"/>
                                            </textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </t>
    </template>
</odoo>
