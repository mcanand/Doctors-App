<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="add_extra_slot">
        <t t-call="website.layout">
            <!-- Your header content here -->
            <t t-set="app_nav_in_content">
                <a href="javascript: window.history.back()">
                    <i style="font-size:16px;" class="fa fa-angle-left"/>
                </a>
                <span class="poppins300 ml-2" style="font-size:15px;">
                    Add New Booking Time
                </span>
                <br/>
            </t>
            <!-- =================================== -->
            <form class="app_edit_booking_time" action="/create/extra/slot" method="post">
                  <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                <div class="container mt-4">
                    <div class="row">

                        <div class="col-md-4">
                            <label>Date:</label>
                            <input type="date" name="date" required="required" class="form-control"/>
                        </div>
                        <div class="col-md-4">
                            <label>From:</label>
                            <input type="time" name="from_time" required="required" class="form-control"/>
                        </div>
                        <div class="col-md-4">
                            <label>To:</label>
                            <input type="time" name="to_time" required="required" class="form-control"/>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="join_button">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </t>
    </template>
</odoo>
