<odoo>
    <template id="today_appointment">
        <t t-call="website.layout">
            <!-- Your header content here -->
            <!-- ... -->

            <div class="container">
                <div class="row mt-3">
                    <t t-foreach="appointments" t-as="appointment">
                        <div class="time-icon">
                            <i class="fa fa-clock-o"></i>
                            <t t-esc="appointment.get('appointment_time')" />
                        </div>
                        <div class="col-24 user-container">
                            <div class="user-box">
                                <div class="user-information">
                                    <div class="appointment-time">
                                        <span class="name-doc">
                                            <t t-esc="appointment.get('doctor_name')" />
                                        </span>

                                        <span class="appointment-time">
                                            <t t-esc="appointment.get('appointment_time')" />
                                        </span>
                                    </div>
                                    <div class="age">
                                        <!-- You can add the age here if available -->
                                    </div>
                                </div>
                                <div class="user-image-box">
<!--                                      <img t-att-src="image_data_uri(appointment.doctor_image)" alt="Doctor Image" />-->

                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
