<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="enter_details">
        <t t-call="website.layout">
            <div class="page">

                <div class="container">

                    <form action="/doctor/details/save" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <h3 style="font-size:35px;">Doctor Details</h3>
                            <span style="display:contents"><button class="o_select_file_button btn btn-light border-0 rounded-circle m-1 p-1" data-tooltip="Edit" aria-label="Edit" fdprocessedid="5hwfoi"></button></span>
                            <div name="image_1920" class="o_field_widget o_field_image oe_avatar m-0">
                                <div class="d-inline-block position-relative opacity-trigger-hover">
                                    <div aria-atomic="true" class="position-absolute d-flex justify-content-between w-100 bottom-0 opacity-0 opacity-100-hover" style="">
<!--                                        <span style="display:contents">-->
                                            <button class="o_select_file_button btn btn-light border-0 rounded-circle m-1 p-1" data-tooltip="Edit" aria-label="Edit" fdprocessedid="8be20m">
<!--                                                <i class="fa fa-pencil fa-fw"></i>-->

<!--                                        </span>-->
                                        <input type="file" class="o_input_file o_hidden" accept="image/*"/>
                                           </button>
                                    </div>
                                    <img class="img img-fluid w-100" alt="Binary file" src="/web/static/img/placeholder.png"  name="image_1920" style="width:100px;height:100px;"/>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label for="name">Name:</label>
                                        <br/>
                                        <input type="text" id="name" name="name" placeholder="Enter your name"
                                               class="form-control form-control-sm"
                                               required="True"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="gender">Gender:</label>
                                        <br/>
                                        <select class="form-control form-control-sm" name="gender" required="True">
                                            <option value="male" style="font-size: 12px;">Male</option>
                                            <option value="female" style="font-size: 12px;">Female</option>
                                            <option value="other" style="font-size: 12px;">Other</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="mobile">Mobile:</label>
                                        <br/>
                                        <input type="number" id="mobile" name="mobile"
                                               placeholder="Enter your mobile number"
                                               class="form-control form-control-sm"
                                               required="True"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email:</label>
                                        <br/>
                                        <input type="email" id="email" name="email" placeholder="Enter your email"
                                               class="form-control form-control-sm"
                                               required="True"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="department">Department:</label>
                                        <br/>
                                        <select class="form-control form-control-sm" name="department_id">
                                            <option t-foreach="departments" t-as="department"
                                                    t-att-value="department.id"
                                                    required="True" style="font-size: 12px;">
                                                <t t-esc="department.name"/>
                                            </option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="work_address">Work Address:</label>
                                        <br/>
                                        <textarea id="work_address" name="work_address"
                                                  placeholder="Enter your work address"
                                                  class="form-control form-control-sm"
                                                  required="True" cols="10"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="experience">Experience In Years:</label>
                                        <br/>
                                        <input type="number" id="experience" name="experience"
                                               class="form-control form-control-sm"
                                               placeholder="Enter your experience"
                                               required="True"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="state">State:</label>
                                        <br/>
                                        <select class="form-control form-control-sm" name="state_id">
                                            <option t-foreach="states" t-as="state" t-att-value="state.id"
                                                    required="True"
                                                    style="font-size: 12px;">
                                                <t t-esc="state.name"/>
                                            </option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="emergency_contact_phone">Emergency Contact Phone:</label>
                                        <br/>
                                        <input type="number" name="contact" placeholder="Enter your contact"
                                               class="form-control form-control-sm"
                                               required="True"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="about">About:</label>
                                        <br/>
                                        <textarea name="about" placeholder="Enter about yourself"
                                                  class="form-control form-control-sm"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Private Address:</label>
                                        <br/>
                                        <input type="text" name="address" placeholder="Enter your address"
                                               required="True" class="form-control form-control-sm"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="time_from">Time From:</label>
                                        <br/>
                                        <input type="time" name="time_from" placeholder="Enter time"
                                               required="True" class="form-control form-control-sm"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="time_to">Time To:</label>
                                        <br/>
                                        <input type="time" name="time_to" placeholder="Enter time"
                                               required="True" class="form-control form-control-sm"/>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="et_pb_contact_brand_file_request_0">
                                        Certificates
                                    </label>
                                    <input type="file" id="et_pb_contact_brand_file_request_0"
                                           name="et_pb_contact_brand_file_request_0"
                                           class="form-control form-control-sm"
                                           multiple="multiple"/>
                                </div>


                                <div class="center-container d-flex justify-content-center">
                                    <button class="join_button" type="submit">Submit</button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>

    </template>
</odoo>
