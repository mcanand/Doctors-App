<odoo>
    <template id="group_details">
        <t t-call="website.layout">
            <!-- Your header content here -->
            <!-- ... -->
              <t t-set="app_nav_in_content">
                <a href="javascript: window.history.back()">
                    <i style="font-size:16px;" class="fa fa-angle-left"/>
                </a>
                <span class="poppins300 ml-2" style="color:#333;">
                    Group Sessions
                </span>
            </t>

            <div class="container">
                <div class="row mt-3">
                     <t t-if="appointments">
                    <t t-foreach="appointments" t-as="appointment">
                        <div class="time-icon">
                            <i class="fa fa-clock-o"></i> On
                            <t t-esc="appointment.get('date')" />
                        </div>
                        <div class="col-24 user-container">
                            <div class="user-box">
                                <div class="user-information">
                                    <div class="appointment-time">
                                        <span class="name-doc">
                                            <t t-esc="appointment.get('doctor_name')" />
                                        </span>

                                        <span class="appointment-time">
                                            <t t-esc="appointment.get('department_name')"/>
<!--                                            <t t-esc="appointment.get('from_time')" />-->
                                        </span>
<!--                                          <span class="appointment-time"> to-->
<!--                                        <t t-esc="appointment.get('to_time')" />-->
<!--                                        </span>-->
                                    </div>
                                    <div class="name-doc">
                                       <span class="age"> From <t t-esc="appointment.get('from_time')" /> to <t t-esc="appointment.get('to_time')" /> </span>
                                    </div>
                                    <div class="name-doc">
                                       <span class="age">
                                           <a class="join_button" t-att-href="'/join/group/meetings%s' %appointment.get('slot_id')">Join Now</a>
                                       </span>
                                    </div>
                                </div>

                                <div class="user-image-box">
                                      <img  t-attf-src="data:image/png;base64,{{appointment.get('doctor_image')}}"/>

                                </div>
                            </div>
                        </div>
                    </t>
                     </t>
                     <t t-else="">
                        <div class="col-24 no-appointments-container">
                            <p class="no-appointments-text">No group sessions.</p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
