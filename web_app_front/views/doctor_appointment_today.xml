<odoo>
    <template id="today_appointment_doctor">
        <t t-call="website.layout">
            <!-- Your header content here -->
            <!-- ... -->
              <t t-set="app_nav_in_content">
                <a href="javascript: window.history.back()">
                    <i style="font-size:16px;" class="fa fa-angle-left"/>
                </a>
                <span class="poppins300 ml-2">
                    Today's Appoinments
                </span>
            </t>



            <div class="container">
                  <div class="row mt-3">
                    <div class="row mt-3">
                    <div class="col-12">
                        <div class="today-heading">
                            <h6>Group Sessions</h6>
                        </div>
                    </div>
                </div>
                     <t t-if="group_patient_appointments">

                    <t t-foreach="group_patient_appointments" t-as="gappointment">
                         <a t-att-href="'/prescription/add/%s' %gappointment.get('patient_id')">
                        <div class="time-icon">
                            <i class="fa fa-clock-o"></i> From
                            <t t-esc="gappointment.get('appointment_time')" />  to   <t t-esc="gappointment.get('appointment_end')" />
                        </div>
                        <div class="col-24 user-container">
                            <div class="user-box">
                                <div class="user-information">
                                    <div class="appointment-time">
                                        <span class="name-doc">
                                            <t t-esc="gappointment.get('group_meeting')" />
                                        </span>

                                        <span class="appointment-time"> Start at
                                            <t t-esc="gappointment.get('appointment_time')" />
                                        </span>

                                    </div>


                                </div>

                            </div>
                        </div>
                         </a>
                    </t>

                     </t>

                     <t t-else="">
                          <div class="col-9 poppins500 app_color">
                                No Appointments Today
                            </div>
<!--                        <div class="col-24 no-appointments-container">-->
<!--                            <p class="no-appointments-text">No appointments today.</p>-->
<!--                        </div>-->
                    </t>
                </div>
                <div class="row mt-3">
                    <div class="row mt-3">
                    <div class="col-12">
                        <div class="today-heading">
                            <h6>Personal consultation</h6>
                        </div>
                    </div>
                </div>
                     <t t-if="appointments">

                    <t t-foreach="appointments" t-as="appointment">
                         <a t-att-href="'/prescription/add/%s' %appointment.get('patient_id')">
                        <div class="time-icon">
                            <i class="fa fa-clock-o"></i> From
                            <t t-esc="appointment.get('appointment_time')" />  to   <t t-esc="appointment.get('appointment_end')" />
                        </div>
                        <div class="col-24 user-container">
                            <div class="user-box">
                                <div class="user-information">
                                    <div class="appointment-time">
                                        <span class="name-doc">
                                            <t t-esc="appointment.get('patient_name')" />
                                        </span>

                                        <span class="appointment-time"> Start at
                                            <t t-esc="appointment.get('appointment_time')" />
                                        </span>

                                    </div>


                                </div>

                            </div>
                        </div>
                         </a>
                    </t>

                     </t>

                     <t t-else="">
                          <div class="col-9 poppins500 app_color">
                                No Appointments Today
                            </div>
<!--                        <div class="col-24 no-appointments-container">-->
<!--                            <p class="no-appointments-text">No appointments today.</p>-->
<!--                        </div>-->
                    </t>
                </div>

            </div>
        </t>
    </template>
</odoo>
