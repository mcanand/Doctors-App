<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="prescription_list">
        <t t-call="website.layout">
            <!-- Your header content here -->
            <t t-set="app_nav_in_content">
                <a href="javascript: window.history.back()">
                    <i style="font-size:16px;" class="fa fa-angle-left"/>
                </a>
                <span class="poppins300 ml-2" style="color:#333;">
                    Prescriptions
                </span>
            </t>
            <!-- =================================== -->
            <div class="container">
                <div class="row mt-3">
                    <t t-foreach="prescriptions" t-as="presc">
                     <div class="col-24 user-container">
                            <div class="user-box">
                                <a t-att-href="'/d/%s' %presc.id ">
                                <div class="user-information">
                                    <div class="appointment-time">
                                        <span class="name-doc">
                                            <t t-esc="presc.doctor_id.name" />
                                        </span>

                                        <span class="appointment-time">
                                            <t t-esc="presc.date" />
                                        </span>

                                    </div>
                                       <span class="appointment-time">
                                            <t t-esc="presc.doctor_id.department_id.name" />
                                        </span>
                                </div>
<!--                                <div class="us-image-box">-->
<!--                                    <img t-att-src="image_data_uri(presc.doctor_id.image_1920)" alt="Doctor Image" />-->

<!--&lt;!&ndash;                                    <img src="/path/to/doctor/image" alt="Doctor Image" />&ndash;&gt;-->
<!--                                </div>-->
                                </a>
                            </div>

                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
